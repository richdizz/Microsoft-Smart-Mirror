<local:MirrorPartBase
    x:Class="SmartMirror.Controls.InboxPart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartMirror.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Line StrokeThickness="3" HorizontalAlignment="Left" Margin="20 0 0 0"
              VerticalAlignment="Stretch" Y2="1" Stretch="Fill" 
              StrokeEndLineCap="Square" StrokeStartLineCap="Square" Stroke="White" 
              Visibility="Collapsed" Name="messageBox" />
        <StackPanel Orientation="Vertical" Name="inboxPanel">
        </StackPanel>
    </Grid>
</local:MirrorPartBase>
